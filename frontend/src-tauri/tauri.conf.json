{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build:desktop",
    "devPath": "http://localhost:5173",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Interview Atlas",
    "version": "1.1.9"
  },
  "tauri": {
    "allowlist": {
      "dialog": {
        "save": true
      },
      "fs": {
        "writeFile": true,
        "scope": [
          "**/*"
        ]
      },
      "shell": {
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "identifier": "com.interview.atlas",
      "icon": [
        "icons/icon.icns",
        "icons/icon.ico",
        "icons/icon.png"
      ],
      "targets": [
        "dmg",
        "app",
        "msi",
        "nsis",
        "updater"
      ],
      "externalBin": [
        "../../backend/dist/interview-atlas-backend"
      ]
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/alexllenaf/INTERLENA-updates/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDk5ODgxRjFEMDQxMzEyNEIKUldSTEVoTUVIUitJbWRMT0ppVHR0dU1OMGVEeTVzUExZT2dHbkk0RmVMNXJtNU5IMmo2UzgzTHgK"
    },
    "windows": [
      {
        "title": "Interview Atlas",
        "width": 1280,
        "height": 860,
        "minWidth": 1100,
        "minHeight": 720,
        "resizable": true,
        "fileDropEnabled": false
      }
    ]
  }
}
